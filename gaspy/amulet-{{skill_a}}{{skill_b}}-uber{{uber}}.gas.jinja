{% set skill_names = {'m': 'Melee', 'r': 'Ranged', 'n': 'Nature Magic', 'c': 'Combat Magic'} %}
{% set skill_name_a = skill_names[skill_a] %}
{% set skill_name_b = skill_names[skill_b] %}
[t:template,n:multiclass_amulet_{{ skill_a }}{{ skill_b }}_uber{{ uber }}]
{
	specializes = amulet;

	doc = "Multiclass Amulet";
	common:screen_name	= "{{ skill_name_a }} + {{ skill_name_b }}, Uber Level {{ uber }}";
    common:is_pcontent_allowed = false;
    gui:inventory_icon = b_gui_ig_i_it_amulet_005;
    aspect:gold_value = {{ 42 * uber }};

	[gui]
	{
		equip_requirements = {{ skill_name_a | lower }}:{{ req_a }},{{ skill_name_b | lower }}:{{ req_b }},strength:{{ req_str }},intelligence:{{ req_int }};
	}
	[magic]
	{
		[enchantments]
		{
			{% if add_str %}
			[*]
			{
				alteration			= alter_strength;
				value				= {{ add_str }};
				description			= "+{{ add_str }} to Strength";
				duration			= #infinite;
				is_permanent		= true;
				is_single_instance	= false;
			}
			{% endif %}
			{% if add_dex %}
			[*]
			{
				alteration			= alter_dexterity;
				value				= {{ add_dex }};
				description			= "+{{ add_dex }} to Dexterity";
				duration			= #infinite;
				is_permanent		= true;
				is_single_instance	= false;
			}
			{% endif %}
			{% if add_int %}
			[*]
			{
				alteration			= alter_intelligence;
				value				= {{ add_int }};
				description			= "+{{ add_int }} to Intelligence";
				duration			= #infinite;
				is_permanent		= true;
				is_single_instance	= false;
			}
			{% endif %}
		}
	}
}
