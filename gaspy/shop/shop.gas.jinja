[t:template,n:multiclass_amulets_shop]
{
	category_name = "1W_shopkeeper";
	doc = "horty_olof";
	specializes = base_npc_pmo;
	[actor]
	{
		portrait_icon = b_gui_ig_i_ic_c_onoc;
	}
	[aspect]
	{
		draw_selection_indicator = TRUE;
		use_range = 1.0;
		is_ghost_usable = TRUE;
		[textures]
		{
			0 = b_c_gbn_pmo-03;
		}
	}
	[common]
	{
		screen_name = "Multiclass Amulets";
	}
	[conversation]
	{
	}
	[inventory]
	{
		[store_pcontent]
		{
			full_ratio = .3;
		}
	}
	[respawn_shrine]
	{
	}
	[store]
	{
		item_markup = 2;
		[item_restock]
		{
			{% for amulet in data %}
			multiclass_amulet_{{ amulet['skill_a'] }}{{ amulet['skill_b'] }}_uber{{ amulet['uber'] }} = 1;
			{% endfor %}
		}
	}
}
